<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div>
    <%= "Email : " %>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label:false,
                  input_html: { autocomplete: "email", :class => "login"} %>
    </div>
    <%= "Mot de passe : " %>
    <%= f.input :password,
                required: false,
                label:false,
                input_html: { autocomplete: "current-password", :class => "login" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
